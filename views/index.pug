html
    title CV
    head 
        style 
            include ../layout.css
        
        
        block scripts
            link(rel="stylesheet", href='https://www.w3schools.com/w3css/4/w3.css')
            
            link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto')
            link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css")
            
            

    body(class="w3-teal")
        //page container
        div(class="w3-content w3-margin-bottom w3-margin-top" style="max-width:1450px;")
            //grid
            div(class="w3-row-padding")
                //left column
                div(class="w3-third ")
                
                    div(class="w3-white w3-text-grey w3-card-4")
                        div(class="w3-display-container ")
                            img(src=picture, alt=firstname,style="width:100% ")
                        
                            div(class="w3-display-bottomleft w3-container w3-text-gray")
                                h2 #{' '} #{firstname} #{lastname}
                    
                        //div box for easier aligning of 
                        div(class="w3-container" )
                            div(class="w3-container" )
                            b
                            p( class="fa fa-briefcase fa-fw w3-margin-right w3-large w3-text-teal") &nbsp;#{position}
                            br
                            p( class="fa fa-home fa-fw w3-margin-right w3-large w3-text-teal") &nbsp;#{location}
                            br
                            p( class="fa fa-hourglass-half fa-fw w3-margin-right w3-large w3-text-teal") &nbsp;#{age}
                            br
                        
                            p( class="fa fa-envelope fa-fw w3-margin-right w3-large w3-text-teal") &nbsp;#{mail}
                            br
                            p(class="fa fa-phone fa-fw w3-margin-right w3-large w3-text-teal") &nbsp;#{phone}
                    
                            hr
                            //skills
                            p(class="w3-large fa fa-bar-chart fa-fw w3-margin-right w3-text-teal") &nbsp;Skills
                            p &nbsp;Java
                            div(class="w3-container w3-center w3-round-xlarge w3-teal" style="width:100%") 100%
                        
                            p &nbsp;Python
                            div(class="w3-container w3-center w3-round-xlarge w3-teal" style="width:90%") 90%
                        
                    
                            //languages
                            p(class="w3-large w3-text-theme fa fa-globe fa-fw w3-margin-right w3-text-teal") &nbsp;Languages
                            p English
                            p Norwegian
                            p Polish
                        
                            //social media
                            p(style='margin-left: 5px;' class="w3-large w3-text-theme fa fa-handshake-o fa-fw w3-margin-right w3-text-teal") &nbsp;Social
                            br
                            
                            if profiles.linkedin.length > 0
                                a(style='margin-left: 10px;' href=profiles.linkedin  class='fa-3x fa fa-linkedin w3-hover-opacity')
                                b    
                            if profiles.github.length > 0
                                a(style='margin-left: 10px;' href=profiles.github class='fa-3x fa fa-github w3-hover-opacity' size="10")
                                b
                            hr
                            
                            
                            
                            
                            
                        
                //right column
                div(class="w3-twothird")
                    div(class="w3-container w3-card w3-white w3-margin-bottom")
            
                        h2(class="w3-text-grey w3-padding-16 fa fa-suitcase fa-fw w3-margin-right w3-xxlarge w3-text-teal") &nbsp;Experience
                        
                        div(class="w3-container")
                            each job in experience
                                h5(class="w3-opacity") #{job.job}
                                p #{job.description}
                                hr
                        
                        
                    div(class="w3-container w3-card w3-white")
                        
                        h2(class="w3-text-grey w3-padding-16 fa fa-graduation-cap fa-fw w3-margin-right w3-xxlarge w3-text-teal") &nbsp;Education
                            
                        div(class="w3-container")
                            each grade in education
                                h5(class="w3-opacity") #{grade.degree}
                                p #{grade.description}
                                hr
                        
                        
                        
                        
            
                       
